<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ECET230FinalMQTTViewerDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ECET230FinalMQTTViewerDesktop.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Connect">
            <ShellContent ContentTemplate="{DataTemplate local:SerialConnectionView}" />
        </Tab>
        <Tab
            Title="Edit">
            <ShellContent ContentTemplate="{DataTemplate local:ScreenEditView}" />
        </Tab>
    </TabBar>

</Shell>
